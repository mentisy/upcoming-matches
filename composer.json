{
    "name": "avolle/upcoming-matches",
    "description": "Generates an image of upcoming matches, with customized team name and logo",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Volle",
            "email": "upcoming.matches@avolle.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Avolle\\UpcomingMatches\\": "src"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-imagick": "*",
        "ext-json": "*",
        "filp/whoops": "^2.7",
        "guzzlehttp/guzzle": "^7.0",
        "phpoffice/phpspreadsheet": "^1.14",
        "cakephp/collection": "^4.1",
        "cakephp/chronos": "^2.0",
        "symfony/cache": "^5.1",
        "monolog/monolog": "^2.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.1",
        "slevomat/coding-standard": "^6.3.6",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "cs-check": "phpcs -p ./src",
        "cs-fix": "phpcbf ./src",
        "stan": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
